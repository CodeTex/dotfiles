{
	"$schema": "https://opencode.ai/config.json",
  	"theme": "rosepine",
	"model": "github-copilot/claude-sonnet-4.5",
	"autoupdate": true,
	"permission": {
		"bash": {
			"*": "ask",
			"cd": "allow",
			"echo": "allow",
			"fd": "allow",
			"find": "allow",
			"findstr": "allow",
			"fzf": "allow",
			"git": "deny",
			"git diff": "allow",
			"git log": "allow",
			"grep": "allow",
			"head": "allow",
			"ls": "allow",
			"mkdir": "allow",
			"pip": "deny",
			"python -m (pytest|ruff|typos|black)": "allow",
			"python -m": "deny",
			"pwd": "allow",
			"rg": "allow",
			"rm": "ask",
			"tail": "allow",
			"wc": "allow",
			"uv": "deny",
			".venv/Scripts/activate": "allow",
			".venv/bin/activate": "allow",
			"source .venv/bin/activate": "allow"
		},
		"webfetch": "deny"
	}
}
